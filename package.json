{
  "name": "changes-uploader",
  "displayName": "Changes Uploader",
  "description": "VS Code Git 变更上传插件，用于管理Git仓库中已修改文件的上传与跟踪",
  "version": "1.0.1",
  "publisher": "notell",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/example/changes-uploader.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "onView:changes-uploader-sidebar",
    "onCommand:changes-uploader.refreshFileList",
    "onCommand:changes-uploader.uploadAllFiles",
    "onCommand:changes-uploader.uploadFile",
    "onCommand:changes-uploader.removeFile",
    "onCommand:changes-uploader.deleteRemoteFile"
  ],
  "main": "out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "changes-uploader-sidebar",
          "title": "文件上传",
          "icon": "$(cloud-upload)"
        }
      ]
    },
    "views": {
      "changes-uploader-sidebar": [
        {
          "type": "tree",
          "id": "changes-uploader.fileList",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "changes-uploader.refreshFileList",
          "when": "view == changes-uploader.fileList",
          "group": "navigation@2"
        },
        {
          "command": "changes-uploader.uploadAllFiles",
          "when": "view == changes-uploader.fileList",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "changes-uploader.uploadFile",
          "when": "view == changes-uploader.fileList && (viewItem == fileItem-untracked || viewItem == fileItem-modified)",
          "group": "inline@1"
        },
        {
          "command": "changes-uploader.removeFile",
          "when": "view == changes-uploader.fileList && (viewItem == fileItem-untracked || viewItem == fileItem-modified)",
          "group": "inline@2"
        },
        {
          "command": "changes-uploader.deleteRemoteFile",
          "when": "view == changes-uploader.fileList && viewItem == fileItem-untracked",
          "group": "inline@3"
        }
      ]
    },
    "commands": [
      {
        "command": "changes-uploader.uploadAllFiles",
        "title": "上传全部文件",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "changes-uploader.uploadFile",
        "title": "上传文件",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "changes-uploader.removeFile",
        "title": "永久移除",
        "icon": "$(trash)"
      },
      {
        "command": "changes-uploader.deleteRemoteFile",
        "title": "删除远程文件",
        "icon": "$(close)"
      },
      {
        "command": "changes-uploader.refreshFileList",
        "title": "刷新文件列表",
        "icon": "$(refresh)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Changes Uploader 配置",
      "properties": {
        "changesUploader.sshConfigPath": {
          "type": "string",
          "default": "",
          "description": "SSH 配置文件路径"
        },
        "changesUploader.remoteHost": {
          "type": "string",
          "default": "",
          "description": "远程服务器主机名"
        },
        "changesUploader.remoteRootPath": {
          "type": "string",
          "default": "",
          "description": "远程服务器上传文件根目录路径"
        }
      }
    }
  },
  "configuration": {
    "properties": {
      "changesUploader.logLevel": {
        "type": "string",
        "default": "info",
        "enum": [
          "error",
          "warn",
          "info",
          "debug"
        ],
        "description": "日志输出级别"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.11.7",
    "@types/ssh2-sftp-client": "^9.0.5",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.27.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "^4.8.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "ssh2": "^1.10.0",
    "ssh2-sftp-client": "^8.0.0"
  }
}
